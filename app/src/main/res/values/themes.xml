<resources>
    <!-- Basis-Theme mit ActionBar (dein bisheriges) -->
    <style name="Theme.Pjesmarica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/dsColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Statusleiste nicht hier anfassen -->
    </style>

    <!-- NoActionBar + Edge-to-Edge fÃ¼r CentralActivity (ohne Light-Flags!) -->
    <style name="Theme.Pjesmarica.NoActionBarEdge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Transparente Systemleisten -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorPrimary">@color/dsColor</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="Theme.Pjesmarica.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/black</item> <!-- oder transparent -->
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

</resources>
